<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/smallImageFragment">

    <fragment
        android:id="@+id/smallImageFragment"
        android:name="com.example.sharedelementtransitionfragmentexample.SmallImageFragment"
        android:label="SmallImageFragment" >
        <action
            android:id="@+id/action_smallImageFragment_to_bigImageFragment"
            app:destination="@id/bigImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/bigImageFragment"
        android:name="com.example.sharedelementtransitionfragmentexample.BigImageFragment"
        android:label="BigImageFragment" />
</navigation>